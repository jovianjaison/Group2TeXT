@model IEnumerable<Ecommerce1.Models.Token>

@{
    ViewBag.Title = "Index";
}

<h2>Your Tokens</h2>

<table class="table">
    <tr>
        <th>
            Time Alloted
        </th>
        <th>
            Business Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TokenDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Business.BusinessName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PacketId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PacketId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PacketId })
            </td>
        </tr>
    }

</table>
